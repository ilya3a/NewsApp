<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:layoutDirection="ltr"
    >

    <CheckBox
        android:id="@+id/sport_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:padding="5dp"
        android:tag="sport"
        android:text="Sport news"
        android:textColor="#000"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/world_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:padding="5dp"
        android:tag="world"
        android:text="World news"
        android:textColor="#000"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/economics_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:padding="5dp"
        android:tag="economic"
        android:text="Economics news"
        android:textColor="#000"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/politics_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:padding="5dp"
        android:tag="politic"
        android:text="Politics news"
        android:textColor="#000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/set_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:text="SET"
        android:textColor="@color/colorPrimary" />

</LinearLayout>