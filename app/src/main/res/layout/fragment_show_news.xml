<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        android:layoutDirection="ltr"
        >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ShowNewsFragment">

            <android.support.v7.widget.CardView
                android:id="@+id/card_articleIv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aricle_titleTV"
                android:layout_margin="20dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"

                >

                <ImageView
                    android:id="@+id/articleIv"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY" />
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/aricle_titleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:text="temp text"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/article_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_articleIv"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:text="temp text"

                android:textColor="#000"
                android:textSize="15sp" />

            <android.support.v7.widget.CardView
                android:id="@+id/card_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/card_articleIv"
                android:layout_alignStart="@id/card_articleIv"
                android:layout_marginBottom="-15dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp">

                <TextView
                    android:id="@+id/authorTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:padding="5dp"
                    android:text="author"
                    android:textColor="#000"
                    android:textSize="12sp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_articleIv"
                android:layout_alignEnd="@id/card_articleIv"
                android:layout_marginTop="-15dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp">

                <TextView
                    android:id="@+id/sourceTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:padding="5dp"
                    android:text="source"
                    android:textColor="#000"
                    android:textSize="12sp" />
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/article_description"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-15dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp">

                <TextView
                    android:id="@+id/linkTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:padding="10dp"
                    android:text="link"
                    android:textColor="#1976D2"
                    android:textSize="12sp" />
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</ScrollView>